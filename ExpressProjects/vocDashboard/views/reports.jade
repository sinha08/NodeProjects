extends layout

block content
  nav.navbar.navbar-inverse
    .container
      .navbar-header
        a#welcome_text.navbar-brand(href='/home') Home
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/logout') Sign Out
  .container
    .jumbotron
      h1= title
  .container
    div
    table.table.table-striped
      thead
        tr
          th ID
          th Account Name
          th IMEI
          th Latitudes
          th Longitudes
          th Location
          th App Version
          th Date
          th Time
          th Receipt
          th Video
          th POS capture
          th Log
      if report != undefined
        tbody
          each resp in report
            tr
              td= resp.feedback_id
              td= resp.account_name
              td= resp.imei
              td= resp.lat
              td= resp.long
              td= resp.loc_name
              td= resp.app_version
              td= resp.date
              td= resp.time
              if resp.files != undefined
                if (resp.files[0] !=undefined && resp.files[0].receipt_path != undefined && resp.files[0].receipt_path.length > 0)
                  td
                    - for(var i=0; i< resp.files[0].receipt_path.length; i++)
                        a(href=resp.files[0].receipt_path[i]) Receipt#{i}
                        br
                else
                  td Null
                if (resp.files[0] !=undefined && resp.files[0].video_path !=undefined && resp.files[0].video_path.length > 0)
                  td
                    - for(var i=0; i< resp.files[0].video_path.length;i++)
                        a(href=resp.files[0].video_path[i]) Video#{i}
                        br
                else
                  td Null
                if (resp.files[0] !=undefined &&  resp.files[0].image_path != undefined && resp.files[0].image_path.length > 0)
                  td
                    - for(var i=0; i< resp.files[0].image_path.length;i++)
                        a(href=resp.files[0].image_path[i]) Image#{i}
                        br
                else
                  td Null
                if (resp.files[0] !=undefined && resp.files[0].log_path != undefined && resp.files[0].log_path.length > 0)
                  td
                    - for(var i=0; i< resp.files[0].log_path.length;i++)
                        a(href=resp.files[0].log_path[i]) Log#{i}
                        br
                else
                  td Null
